@import 'components/common/uikit/colors';
@import 'components/common/uikit/font';

.container
  box-sizing: border-box;
  margin: 0 auto 0
  padding: 50px 0

  width: 512px

.title
  color: color-black
  font(h2-title)

.actions
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 30px

.logout
  box-sizing: border-box;

  height: 40px
  padding: 0 25px

  font(subtitle, false, false, 38px)
  text-align: center;
  letter-spacing: 0.15em;
  text-transform: uppercase;

  color: color-text-blue
  background-color: color-white
  border: 1px solid color-heavy-blue

  border-radius: 2px;

  outline: none
  cursor: pointer;
