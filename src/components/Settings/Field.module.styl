@import 'components/common/uikit/colors';
@import 'components/common/uikit/font';

.container
  box-sizing: border-box;
  margin-top: 20px

  max-width: 100%

  display: flex;
  align-items: center;
  justify-content: space-between;

.field
  max-width: calc(100% - 30px)

.title
  color: color-text-dark
  font(body)

.value
  margin-top: 1px

  color: color-text-grey
  font(small-text)

  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

.edit
  box-sizing: border-box;
  padding: 0
  margin-left: 10px

  background-color: transparent

  border: 0
  outline: 0
  cursor: pointer;

  path
    fill: color-text-heavy-blue
