@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.content
  box-sizing: border-box;
  padding: 50px 50px
  max-width: 850px

  text-align: center;

.json
  margin-top: 50px
  max-height: 300px

.actions
  position fixed
  right 0
  bottom: 10px
  > *
    margin-right: 10px

.next
  background-color: color-white
  border-color: color-white

  &:hover
    background-color: color-white
    border-color: color-white

.back
  color: color-white
  border-color: color-white

  &:hover
    color: color-white
    border-color: color-white
