@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.container
  overflow scroll
  display: block
  text-align: left

  overflow-y: scroll

  box-sizing: border-box
  padding: 30px 36px
  border: 1px solid color-heavy-blue
  background-color: color-blue-background
  color: color-white
  font(body)

  white-space: pre-wrap;
  word-wrap: break-word
