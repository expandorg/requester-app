@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.container
  box-sizing: border-box;
  padding: 30px 0 50px 0
  margin: 0 auto;
  max-width: 1000px

.info
  display: flex;
  align-items: center;
  justify-content: space-between;

.download
  text-decoration: none
  display block
  line-height: 40px

.details
  display: flex
  align-items: center

.logo
  margin-right: 20px

.name
  color: color-text-dark
  font(h1, false, false, 50px)

.description
  margin-top: 3px
  color: color-text-grey
  font(body)

.status
  margin-top: 5px
  color: color-text-teel-large
  font(subtitle)
  text-transform: uppercase


.stats
  display: flex;
  align-items: center;
  justify-content: flex-start;

.hero
  color: color-primary-blue
  margin-right: 80px

.pending
  margin-left: -35px
  margin-right: 45px

.verify
  margin-top: 30px

.verifyLink
  color: color-heavy-blue
  text-decoration: none
  font(h3-title)
