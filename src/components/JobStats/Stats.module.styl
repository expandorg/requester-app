@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.container
  box-sizing: border-box;
  padding: 50px 0px 50px 0px
  margin: 0 auto;
  max-width: 1000px

.info
  display: flex;
  align-items: center;
  justify-content: space-between;

.stats
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-top: 0
  margin-left: 10px

  > *
    margin-right: 110px

.details
  font(h2-title)
  color: color-text-dark

.hero
  color: color-text-dark

.download
  text-decoration: none
  display block
