@import 'components/common/uikit/colors'
@import 'components/common/uikit/font'
@import 'components/common/uikit/size'

.header
  box-sizing: border-box;

  display: flex;
  align-items: center;
  justify-content: flex-start

  height: sz-navbar-height
  padding-left: 25px

  background-color: color-white;

.top
  position: fixed;
  top: 0
  left: 0
  right: 0

  box-shadow: light-shadow;

  z-index: 2

.logo
  display: inline-block;
  height: 100%;
  width: 50px
  height: 50px

  margin-right: 100px

  &:hover
    path
      fill: darken(#FF7092, 10%)

.nav
  height: 100%;
  display: flex;
  align-items: center;
  flex-grow: 1

.title
  color: color-text-dark
  font(h1, false, false, 1)

.logout
  box-sizing: border-box;

  height: 40px
  padding: 0 25px
  margin-right: 40px

  font(subtitle, false, false, 38px)
  text-align: center;
  letter-spacing: 0.15em;
  text-transform: uppercase;

  color: color-text-blue
  background-color: color-white
  border: 1px solid color-heavy-blue

  border-radius: 2px;

  outline: none
  cursor: pointer;
