@import 'components/common/uikit/colors';
@import 'components/common/uikit/font';

.container
  box-sizing: border-box;
  background-color: transparent;

  padding: 0 20px
  margin: 0

  height: 125px;
  width: 100%;

  border: 2px dashed color-heavy-blue

  outline: 0
  cursor: pointer;
  border-radius: 5px

.plus
  box-sizing: border-box;

  font-family: 'Avenir';
  font-weight: 300;
  font-size: 72px;
  text-align: center;

  color: color-text-heavy-blue

  line-height: 0.8


.add
  color: color-text-blue
  font(body, false, false,  1)
