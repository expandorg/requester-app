@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  box-sizing: border-box;
  padding: 50px 80px
  max-width: 850px

  text-align: center;

.icon
  display: inline-block;
  width: 64px
  height: 64px

.warning
  path
    fill: color-text-yellow

.success
  path
    fill: color-teel-dark

.eye
  path
    fill: color-heavy-blue

.title
  box-sizing: border-box;
  margin-top: 20px

  max-width: 600px

  font(h1, false, false, 1)
  color: color-text-dark

.confirmation
  box-sizing: border-box;
  margin-top: 15px
  font(body, false, false, 1)
  color: color-text-dark

