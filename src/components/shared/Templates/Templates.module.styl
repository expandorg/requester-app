@import 'components/common/uikit/colors';

.container
  display: flex;
  justify-content: flex-start;
  align-items: stretch;
  min-height: 300px

.sidebar
  box-sizing: border-box;
  width: 245px
  min-width: 245px

  border-top-left-radius: 5px
  border-bottom-left-radius: 5px

  background-color: #F3F9FF
  border-right: 1px solid color-heavy-blue;

.title
  box-sizing: border-box;
  height: 75px

  line-height: 75px

  font-family: 'Avenir';
  font-size: 24px;

  text-align: center;
  color: color-text-dark;

.i
  margin-left: 8px

.content
  flex-grow: 1
