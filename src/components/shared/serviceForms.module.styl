@import 'components/common/uikit/colors'
@import 'components/common/uikit/font'

.container
  box-sizing: border-box;
  padding: 50px 160px

  text-align: center;

  @media(max-width: 720px)
    padding: 20px

.inner
  width: 410px
  margin: 0 auto;

.title
  box-sizing: border-box;
  margin-top: 30px

  font(h1, false, false, 1)
  color: color-text-dark


.descriptionBold
  box-sizing: border-box;
  margin-top: 30px
  font(body, 800)
  color: color-text-grey

.description
  box-sizing: border-box;
  margin-top: 30px
  font(body)
  color: color-text-dark

.field
  position: relative;
  margin-top: 32px
  text-align: left;

.error
  position: absolute;
  top: calc(100% + 15px)
  left: 0
  right: 0
  text-align: center;


.actions
  display: flex;
  align-content: center;
  justify-content: center;

  margin-top: 50px

  > *
    margin: 0 7px

.button
  width: 200px
