@import 'components/common/uikit/colors'
@import 'components/common/uikit/font'

.container
  box-sizing: border-box;
  padding: 50px 140px

  text-align: center;

  @media(max-width: 720px)
    padding: 20px

.inner
  width: 440px
  max-width: 440px
  margin: 0 auto;

.title
  box-sizing: border-box;

  font(h1, false, false, 1)
  color: color-text-dark

  margin: 0 -45px

.icon
  display: inline-block;
  width: 64px
  height: 64px
  margin-bottom: 20px

.warning
  path
    fill: color-text-yellow

.success
  path
    fill: color-teel-dark

.descriptionBold
  box-sizing: border-box;
  margin-top: 15px
  font(body, 800)
  color: color-text-grey

.description
  box-sizing: border-box;
  margin-top: 15px
  font(body)
  color: color-text-dark

.field
  position: relative;
  margin-top: 32px
  text-align: left;

.error
  position: absolute;
  top: calc(100% + 15px)
  left: 0
  right: 0
  text-align: center;


.actions
  display: flex;
  align-content: center;
  justify-content: center;

  margin-top: 50px

  > *
    margin: 0 7px

.button
  width: 200px

.gems
  color: color-text-grey
  font-weight: 800;
  margin: 0 5px
