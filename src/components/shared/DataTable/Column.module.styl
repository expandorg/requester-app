@import 'components/common/uikit/colors'
@import 'components/common/uikit/font'

.container
  box-sizing: border-box;
  position relative
  width: 241px
  min-width: 241px
  border-right: 1px solid color-heavy-blue

  &:last-child
    border-right: none;

.content
  background-color: color-light-blue
  box-sizing: border-box;
  padding: 20px 0

  border-bottom: 1px solid color-heavy-blue

.name
  box-sizing: border-box;

  margin-bottom: 20px
  padding: 0 10px

  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis


  font(h3-bold, false, false, 1)

  color: color-text-dark
  text-align: center;

.type
.skipped
  box-sizing: border-box;
  font(body, false, false, 1)
  text-align: center;

.type
  color: color-text-dark

.skipped
  color: color-text-pink

.actions
  box-sizing: border-box;
  margin-top: 22px
  display: flex;
  align-items: center;
  justify-content: center;

.button
  box-sizing: border-box;

  height: 40px
  width: 100px

  padding: 0

  font(subtitle, false, false, 38px)
  text-align: center;
  letter-spacing: 0.15em;
  text-transform: uppercase;

  border: 1px solid color-heavy-blue
  border-radius: 2px;

  color: color-text-blue

  outline: none;
  cursor: pointer;

  margin: 0 5px

.skip
  background-color: color-white

.edit
  background-color: color-medium-blue

.save
  background-color: color-pink
  border-color: color-pink
  color: color-white

.absolute
  position: absolute;
  left: 0
  right: 0
  top: 0

.fields
  box-sizing: border-box;
  padding: 0 16px 0 25px

.input
  box-sizing: border-box
  display: inline-block;

  width: 100%

  padding: 0 15px 10px 0

  font(body)
  color: color-text-dark

  background-color: transparent
  border-bottom: 1px solid color-heavy-blue

  transition: all 0.2s ease-out;

  outline: none
  resize: none;

  &:focus
    border-bottom-color color-primary-blue

  &:-webkit-autofill
    transition: background-color 5000s ease-in-out 0s
    &:hover, &:focus, &:active
      transition: background-color 5000s ease-in-out 0s

.select
  margin-top: 20px

.selectVal
  box-sizing: border-box
  position relative

  width: 100%
  padding-bottom 10px

  font(body)
  color: color-text-dark
  border-bottom: 1px solid color-heavy-blue

  &:after
    position: absolute
    content: ''
    right: 0
    top: calc(50% - 8px)
    width: 12px
    height: 16px
    background-color: transparent;
    background-position: center;
    background-origin: border-box
    background-repeat: no-repeat
    background-image: url(../../assets/arrow-down.svg)
