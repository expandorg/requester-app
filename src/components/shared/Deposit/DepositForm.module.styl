@import 'components/common/uikit/colors'
@import 'components/common/uikit/font'

.container
  box-sizing: border-box;
  padding: 50px 100px

  text-align: center;

.icon
  display: inline-block;
  path
    fill: color-text-yellow

.title
  box-sizing: border-box;
  margin-top: 30px

  font(h1, false, false, 1)
  color: color-text-dark

.description
  box-sizing: border-box;
  margin-top: 10px
  font(body, false, false, 1)
  color: color-text-dark

.field
  margin-top: 32px
  text-align: left;
  width: 500px

.actions
  display: flex;
  align-content: center;
  justify-content: center;

  margin-top: 30px

  > *
    margin: 0 7px

.button
  width: 200px
