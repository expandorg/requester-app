@import 'components/common/uikit/colors'
@import 'components/common/uikit/font'

.container
  box-sizing: border-box;
  padding: 50px 100px

  text-align: center;

.metamask
  margin-top: 10px

.assign
  display: flex
  align-items: center

  width: 100%
  height: 72px
  line-height: 72px

  font(h3-title)
  color: color-text-dark

  cursor: pointer
  outline: 0;

.fox
  width: 40px
  height: 40px
  margin-right: 18px
  margin-left: 15px

  background-position:center
  background-size: contain
  background-repeat: no-repeat
  background-origin: border-box
  background-image: url(../../assets/fox.svg)

.error
  padding: 10px 0

.title
  box-sizing: border-box;
  margin-top: 30px

  font(h1, false, false, 1)
  color: color-text-dark

.description
  box-sizing: border-box;
  margin-top: 10px
  font(body, false, false, 1)
  color: color-text-dark

.field
  margin-top: 32px
  text-align: left;
  width: 500px

.actions
  display: flex;
  align-content: center;
  justify-content: center;

  margin-top: 30px

  > *
    margin: 0 7px

.button
  width: 200px
