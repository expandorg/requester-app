@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  box-sizing: border-box;
  min-width: 400px

.headline
  color: color-text-dark
  font(h1)
  text-align: center;

.description
  font(body)
  color: color-text-dark
  text-align: center;
  margin-top: 16px

.screenshot
  margin: 20px auto 0 auto;

  width: 100%
  height: 400px;

  background-position:center;
  background-size: contain;
  background-repeat: no-repeat;
  background-origin: border-box;
  background-image: url(./login-screenshot.svg);

.actions
  margin-top: 20px

.error
  margin-top: 10px;
  text-align: center;

.action
  width:auto;
  white-space: nowrap;
  padding: 0 20px
