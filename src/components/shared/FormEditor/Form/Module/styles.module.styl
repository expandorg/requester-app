@import '~@gemsorg/uikit/colors';

.container
  box-sizing: border-box;
  position: relative;

  padding: 20px 40px 20px 20px

  background: color-white;
  box-shadow: 0px 4px 10px #CCE3FF;
  border-radius: 5px;

.edit
  position: absolute;
  right: 20px
  top: 20px

  box-sizing: border-box;

  height: 14px
  width: 14px

  padding:  0
  margin: 0

  outline: none;
  cursor: pointer;

  :global(.gem-tooltip-orientation-top)
    bottom: 30px

  path
    fill: #CBDFFA

  &:hover
    path
      fill: darken(#CBDFFA, 10%)
