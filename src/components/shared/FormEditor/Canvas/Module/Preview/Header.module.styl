@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  display: flex
  align-items: center
  justify-content: space-between

  box-sizing: border-box
  padding-top: 10px
  height 30px

  cursor pointer

.name
  color: color-text-grey
  font(small-text, false, 14px, 20px)
  box-sizing: border-box

.icons
  > *
    margin-left: 15px

    &:first-child
      margin-left: 0

  path
    fill: color-text-grey
