@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/size';

.container
  box-sizing: border-box;

  padding: 0 15px 15px

  background: color-white;
  box-shadow: 0px 2px 5px #CEE1F7;

  border-radius: 5px;
  border: 1px solid color-heavy-blue

  transition: transform 0.3s ease-out, box-shadow 0.3s ease-out;

  &:hover
    box-shadow: 0px 10px 15px #CCE3FD;

.selected
  box-shadow: heavy-shadow
  transform: translateX(0)

  &:hover
    box-shadow: heavy-shadow

  @media(max-width: 1600px)
    transform: translateX(-210px)

