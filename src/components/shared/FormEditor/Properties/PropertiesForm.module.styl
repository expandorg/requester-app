@import 'components/common/uikit/colors'

.container
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  box-sizing: border-box;
  padding-bottom: 25px

  height: 100%;

.content
  box-sizing: border-box;
  padding: 40px 25px 25px 50px

.title
  font-family: Avenir;
  font-size: 24px;

  color: color-black;


.actions
  display: flex;
  align-items: center;
  justify-content: flex-end;

  box-sizing: border-box;
  padding: 0 25px

  > *
    margin-left: 25px
