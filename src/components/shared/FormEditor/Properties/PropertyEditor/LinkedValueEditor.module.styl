@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.container
  margin-top: 36px


.input
  margin-top: 5px

.actions
  margin-top: 25px
  display: flex

  > *
    margin-right: 10px

    &:last-child
      margin-right: 0

.button
  width: 100%

.warning
  box-sizing: border-box

  padding: 20px 30px
  border-radius: 5px

  margin-top: 30px

  font(h4-bold, false, false, 1)
  border: 1px solid color-text-yellow;
  color: color-text-yellow-2
  background-color: rgba(251, 188, 5, 0.15);
