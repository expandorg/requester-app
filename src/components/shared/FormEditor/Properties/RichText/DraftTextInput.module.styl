@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.container
  position: relative;

  box-sizing: border-box;

  border: 1px solid transparent
  padding: 0 15px 8px 0
  border-bottom: 2px solid  color-heavy-blue

.input
  box-sizing: border-box;

  font(body, false, false, normal)

  background-color: transparent
  color: color-blue-background

  transition: all 0.2s ease-out;

  :global(.public-DraftEditorPlaceholder-inner)
    color: color-text-dark

.focus
  border-bottom-color color-primary-blue

.vars
  box-sizing: border-box;

  position: absolute;
  right: 0
  top: 0px

  font(subtitle, 800)
  text-transform: uppercase

  color: #25796A
  background-color: #E1F2EF
  border: 1px solid #34A893;
  padding: 4px 5px

  outline: 0
  cursor pointer

.dropdown
  left: inherit;
  right: 0
