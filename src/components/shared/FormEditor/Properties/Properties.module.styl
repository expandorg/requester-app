@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  box-sizing: border-box;
  height: 100%;

.content
  box-sizing: border-box;
  padding: 40px 50px 20px
  overflow: scroll;

  flex-grow: 1

.title
  font(h2-title)
  color: color-text-dark;

.name
  margin-top: 10px
  color: color-text-grey
  font(small-text)

.actions
  display: flex;
  align-items: center;
  justify-content: flex-end;

  box-sizing: border-box;
  padding: 10px 20px 10px
  min-height: 70px
  height: 70px

  > *
    margin-left: 20px

.btn
  height: 40px
  width: 130px

.done
  color: color-light-blue
  background-color: color-teel-dark

  &:hover
    background-color: lighten(color-teel-dark, 5%)
