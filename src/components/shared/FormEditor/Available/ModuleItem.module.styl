@import 'components/common/uikit/colors';


dragging()
  .dragging &
    {block}

hovered()
  .hovered &
    {block}

.container
  box-sizing: border-box;

  display: flex;
  align-items: stretch;
  justify-content: flex-start;

  height: 54px

  background-color: #2F80ED
  margin-bottom: 10px

  border: 2px solid #4285F4
  border-radius: 5px;


.hovered
  background-color: transparent;


.dragging
  visibility: hidden;
  transform: translate(0, 0);

.drag
  background-color: color-white;
  min-width: 35px
  line-height: 54px
  border-top-left-radius: 4px
  border-bottom-left-radius: 4px

  text-align: center;

  cursor: grab;

  path
    fill #2F80ED

  +hovered()
    background-color: transparent

.name
  box-sizing: border-box;
  padding: 0 6px

  width: 100%;

  color: color-white;
  font-family: 'Roboto';
  font-size: 14px;
  line-height: 52px

  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.preview
  position: absolute;
  box-sizing: border-box;

  left: 100%
  top: 0

  padding: 15px

  width: 220px
  text-align: center;

  background-color: color-blue-background
  border: 2px solid #4285F4

  border-radius: 5px;
  border-top-left-radius: 0

  z-index: 2;

  &:before
    position: absolute;
    box-sizing: border-box;
    content: " "


    top: -2px
    left: -20px
    width: 20px
    height: 54px

    background-color: color-blue-background
    border-top: 2px solid #4285F4
    border-bottom: 2px solid #4285F4

.img
  max-width: 100%;
  height: auto;
  width: auto;

  path
    fill: color-white;

.add
  box-sizing: border-box;
  display: block;

  color: color-white

  width: 100%
  height: 40px;
  line-height: 38px

  margin-top: 15px

  font-family: 'Avenir';
  font-weight: 800;
  font-size: 13px;
  text-align: center;
  letter-spacing: 0.2em;
  text-transform: uppercase;

  outline: 0
  cursor: pointer;

  background-color: color-blue-background;
  border: 1px solid #2F80ED;
