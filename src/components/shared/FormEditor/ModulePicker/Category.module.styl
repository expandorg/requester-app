@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';


.container
  box-sizing: border-box;
  border-bottom: 1px solid color-white
  padding: 5px 20px

  &:last-child
    border-bottom: none

.inner
  box-sizing: border-box
  display: flex;
  justify-content: flex-start;
  align-items: stretch;
  height: 45px;
  cursor: pointer;

.toggle
  min-width: 35px
  line-height: 46px

  text-align: center;

.arrowIcon
  position: relative;
  transform: rotate(180deg)

  path
    fill color-white

  .opened &
    transform: rotate(0)


.name
  box-sizing: border-box;
  padding: 0 6px
  width: 100%;

  color: color-white;
  font(small-text, 500, false, 46px)

  border-top-right-radius: 4px
  border-bottom-right-radius: 4px

  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  user-select: none;

  transition: background-color  100ms linear, color 100ms linear

.list
  box-sizing: border-box;
  padding: 5px 0 15px
