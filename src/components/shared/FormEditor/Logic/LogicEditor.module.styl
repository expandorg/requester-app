@import '~@expandorg/uikit/colors';

.container
  box-sizing: border-box;
  color: color-white;

  padding: 20px 20px

  border-radius: 5px;
  background-color: color-blue-background
  box-shadow: heavy-shadow

.actions
  display: flex
  justify-content: flex-end

  > *
    margin-left: 20px
    line-height: 40px

    &:first-child
      margin-left: 0

