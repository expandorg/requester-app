@import '~@expandorg/uikit/colors';

.actions
  position absolute
  right: 0
  top: 0
  bottom: 0
  width: 16px

  display: none;
  flex-direction: column
  justify-content: center

  :global(.gem-outer):hover > &
    display: flex;

.remove
.copy
  box-sizing: border-box;

  width: 16px
  height: 16px

  padding: 0
  margin: 0 0 5px 0

  background-color: transparent;

  cursor: pointer;
  outline: 0

  path
    fill: color-text-disabled

  &:hover
    path
      fill: darken(color-text-disabled, 20%)

