@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.actions
  display: flex;
  justify-content: space-between;
  align-items: center;

  box-sizing: border-box;

  padding: 0 20px

  height: 70px
  min-height: 70px

  background-color: color-white

  box-shadow: light-shadow

.title
  font(h2-title)
  color: color-text-dark

.btn
  height: 40px
  width: 130px

  margin-left: 20px

  &:first-child
    margin-left: 0

.buttons
  display: flex;
  align-items: center

  position: relative


.previewContainer
  position: relative

.previewPin
.togglePin
  top: -62px
  left: 0

.previewPin
  left: calc(50% - 20px)
