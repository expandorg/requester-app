@import '~@gemsorg/uikit/colors'
@import '~@gemsorg/uikit/font'


.gem-sidebar
  position: fixed
  top: 0
  left: 0

  box-sizing: border-box;

  width: 125px
  height: 100vh

  background-color: #1C2541
  z-index: 2

  &-logo
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;

    height: 100px;

    &:hover
      background-color: #3A506B

  &-nav

    &-link
      display: flex;
      align-items: center;
      flex-direction: column;
      justify-content: center;

      box-sizing: border-box;
      height: 100px

      color: color-white;

      font-family: Avenir;
      font-weight: 800;
      font-size: 11px;

      letter-spacing: 0.2em;

      text-decoration: none;
      text-transform: uppercase;

      outline: 0

      path
        fill: color-white

      &:hover
        background-color: #3A506B

      &-active
        background-color: #2F80ED

        &:hover
          background-color: #2F80ED

      &-icon
        margin-bottom: 17px;
