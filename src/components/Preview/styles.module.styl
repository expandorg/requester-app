@import '~@expandorg/uikit/colors'

.container
  box-sizing: border-box
  padding: 0 30px

.panel
  max-width 900px
  margin: 30px auto

.navbar
  box-sizing: border-box

  display: flex
  justify-content: flex-end

  width: 100%
  padding-right: 20px


.home
  color: color-text-blue
  background-color: color-white
  border: 1px solid color-heavy-blue

  padding: 0 20px

  &:hover
    color: color-text-blue
    background-color: color-white
    border: 1px solid color-heavy-blue
