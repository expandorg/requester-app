@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';
@import '~@expandorg/uikit/size';


.panel
  box-sizing: border-box
  width: 512px
  padding: 40px 30px
  margin-bottom: 60px

  @media(max-width: breakpoint-mobile-sm)
    width: 100%

.error
  margin-top: 20px

.token
  position relative
  height: 35px

.input
  :global(.gem-input)
    padding-right: 40px
    width: calc(100% - 40px)

.copy
  position: absolute
  right 0
  top: calc(50% - 15px)
  padding: 2px

  box-sizing: border-box

  text-transform: uppercase
  font(subtitle-bold, 800)

  border: 0
  background-color: transparent
  color: color-text-blue

  outline: 0
  cursor pointer

  &:hover
    color: lighten(color-text-blue, 10%)

.generate
  width: 100%

.alert
  box-sizing: border-box
  margin-top: 30px

  padding: 15px 15px
  border-radius: 5px
  font(body)

  color: color-text-yellow-2
  background-color: #FEEEC0
  border: 1px solid color-yellow

.bold
  font-weight: 800

