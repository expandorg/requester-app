@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';
@import '~@expandorg/uikit/size';


.panel
  box-sizing: border-box
  width: 512px
  padding: 40px 40px
  margin-bottom: 60px

  @media(max-width: breakpoint-mobile-sm)
    width: 100%


.error
  margin-top: 20px

.token
  position relative

.input
  :global(.gem-input)
    padding-right: 40px
    width: calc(100% - 40px)

.copy
  position: absolute
  right 0
  top: calc(50% - 15px)
  padding: 2px

  box-sizing: border-box

  text-transform: uppercase
  font(subtitle-bold, 800)

  border: 0
  background-color: transparent
  color: color-text-blue

  outline: 0
  cursor pointer

  &:hover
    color: lighten(color-text-blue, 10%)



.generate
  width: 250px
  height: 250px
  box-sizing: border-box

  font(subtitle)
  text-transform: uppercase

  color: color-heavy-blue
  background-color: transparent;
  border-radius: 5px
  border: 1px solid color-heavy-blue

  outline: 0
  cursor: pointer


.plus
  font-size: 96px
  font-weight: 300
