@import 'components/common/uikit/colors';
@import 'components/common/uikit/font';

.container
  margin-top: 40px;

.label
  display: flex;
  align-items: center;
  justify-content: space-between;

  font(body)
  color: color-text-dark;

.dropzone
  display: flex;
  align-items: center;
  justify-content: center;
  position relative

  box-sizing: border-box;

  margin-top: 10px;

  height: 140px;
  width: 100%

  background-color: color-light-blue
  border-radius: 5px;
  border: 2px dashed color-heavy-blue;

  cursor: pointer;

.previewContainer
  box-sizing: border-box;
  position: relative;

  display: flex;
  align-items: center;
  justify-content: center;

  min-width: 240px
  min-height: 60px

.previewHint
  box-sizing: border-box;
  position: absolute;

  background-color: color-white

  left: calc(50% - 120px)
  top: calc(50% - 30px)

  color: color-blue-background
  border: 1px solid color-heavy-blue
  border-radius: 5px

  text-align: center;

  width: 240px
  height: 60px
  font(subtitle, false,false, 58px)

  text-transform: uppercase;
  visibility: hidden;

  .previewContainer:hover &
    visibility visible

.preview
  display: block;

  width: auto;
  height: auto;

  max-width: 300px
  max-height: 100px

.tooltip
  position relative
