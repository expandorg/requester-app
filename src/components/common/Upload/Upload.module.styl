@import 'components/common/uikit/colors';

.container
  margin-top: 40px;

.label
  display: flex;
  align-items: center;
  justify-content: space-between;

  font-family: 'Avenir';
  font-size: 16px;
  color: color-text-dark;

.dropzone
  display: flex;
  align-items: center;
  justify-content: center;

  box-sizing: border-box;

  margin-top: 10px;

  height: 140px;
  width: 100%

  background-color: #F3F9FF
  border-radius: 5px;
  border: 2px dashed color-heavy-blue;

  cursor: pointer;

.preview
  display: block;

  width: auto;
  height: auto;

  max-width: 100px
  max-height: 100px
