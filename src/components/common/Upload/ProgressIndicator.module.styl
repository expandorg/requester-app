@import 'components/common/uikit/colors';
@import 'components/common/uikit/font';

.container
  position: absolute;
  left: 0
  right: 0
  top: 0
  bottom: 0

.progress
  position: absolute;
  height: 100%;

  left: 0
  top: 0
  bottom: 0
  background-color: color-teel-dark

  transition: width 400ms ease-in

  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 20px

.percent
  font(h3-bold)
  color: color-white
  overflow: hidden;
  transition: opacity 400ms ease-in
