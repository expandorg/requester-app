@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.scroll
  display: flex;
  justify-content: center;
  align-items: center

.inner
  max-width: calc(100% - 200px)
  overflow: scroll;

.table
  margin-top: 30px
  border-collapse: collapse

.header
  background-color: color-light-blue

.headerCell
  text-align: center
  font(h3-bold)

  color: color-text-dark
  border: 1px solid color-heavy-blue

.cell
  width 240px
  max-width 240px
  box-sizing: border-box
  padding-left: 20px

  height 50px
  font(body)
  color: color-text-dark
  border: 1px solid color-heavy-blue
