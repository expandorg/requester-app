@import 'components/common/uikit/colors';

.i
  position: relative;
  display: inline-block;
  height: 12px
  width: 12px
  line-height: 12px

  :global(.gem-tooltip)
    background-color: #383838

    &:after
      border-right-color: #383838

  path
    fill: color-text-heavy-blue

  &:hover
    path
      fill: color-text-dark
