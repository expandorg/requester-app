@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.dropdown
  position: absolute
  top: 32px
  left: 0

  height: 300px
  width: 170px
  overflow: auto

  background: color-white
  box-shadow: heavy-shadow

  z-index: 2

.item
  width: 100%
  height: 50px
  line-height: 50px

  padding-left: 25px
  box-sizing: border-box

  transition: background-color 0.4s cubic-bezier(.27,1.27,.48,.56);
  cursor: pointer
  text-align: left
  border: 0

  color: color-text-dark
  font(body, false, false, 40px)

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

  &:hover
    background-color: color-medium-blue;
