@import 'components/common/uikit/colors'
@import 'components/common/uikit/font'

.container
  position: relative;

.dropdown
  position: absolute
  top: 32px
  left: 0

  height: 300px
  width: 170px
  overflow: auto

  background: color-white
  box-shadow: heavy-shadow

  z-index: 2


.item
  width: 100%
  height: 50px
  line-height: 50px

  padding-left: 25px
  box-sizing: border-box

  transition: background-color 0.4s cubic-bezier(.27,1.27,.48,.56);
  cursor: pointer
  text-align: left
  border: 0

  color: color-text-dark
  font(body, false, false, 40px)

  &:hover
    background-color: color-medium-blue;


.button
  display: flex
  justify-content: center
  align-items: center

  height: 30px
  padding: 0 10px

  color: color-text-blue
  text-transform: uppercase
  background: color-light-blue
  border: 1px solid color-heavy-blue
  font(body-bold, false, 15px, false)
  line-height: 30px
  letter-spacing: 0.1em

  outline: 0
  cursor: pointer
