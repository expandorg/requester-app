@import 'components/common/uikit/colors'

.button
  box-sizing: border-box;

  padding: 0 0
  width: 150px;
  height: 60px;

  font-family: 'Avenir';
  font-weight: 800;
  font-size: 12px;
  letter-spacing: 0.1em;

  text-align: center;
  text-transform: uppercase;

  color: color-white;

  background-color: #FF7092;
  border-radius: 5px;

  outline: 0
  cursor: pointer;

  &:hover
    background-color: lighten(#FF7092, 10%)


.link
  background-color: transparent
  color: #FF7092;

  &:hover
    background-color: transparent
    color: lighten(#FF7092, 10%)

.aqua
  border: 1px solid #34A893;
  background-color: rgba(112, 255, 221, 0.5);
  color: #34A893;

  &:hover
    background-color: rgba(112, 255, 221, 0.7);

.secondary
  color: #979797
  background-color: color-grey-background

  &:hover
    background-color: lighten(color-grey-background, 10%);
