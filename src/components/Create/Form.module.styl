@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/size';
@import '~@expandorg/uikit/font';


.container
  box-sizing: border-box;
  height 100vh
  display flex

.content
  box-sizing: border-box;
  flex-grow: 1

  display: flex
  flex-direction: column
  justify-content: space-between

.preview
  box-sizing: border-box

  padding: 16px 16px

  flex-grow: 1
  overflow-y: scroll
  max-height: calc(100vh - 80px)

.form
  box-sizing: border-box;

  margin-top: 50px
  margin-bottom: 50px

  padding: 40px 40px

  background-color: color-white
  border: 1px solid #8CBBEE;
  box-shadow: 0px 4px 4px #DFEEFF;
  border-radius: 5px;

.actions
  box-sizing: border-box
  background-color: color-white
  display: flex
  justify-content: space-between
  align-items: center

  height 80px
  padding: 0 20px

.top
  box-sizing: border-box
  font(h3-title, false, false, 1)
  text-align: center
  padding: 47px 15px 0


.create
  padding: 0 15px

.hide
  margin-right 15px
