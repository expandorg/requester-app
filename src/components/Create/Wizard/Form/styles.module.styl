@import '~@gemsorg/uikit/colors'

.form
  box-sizing: border-box;
  padding: 75px 15px 20px

.fieldset
  box-sizing: border-box;

  margin: 0 auto;
  max-width: 520px

.i
  position: relative;
  display: inline-block;
  height: 12px
  width: 12px
  line-height: 12px

  :global(.gem-tooltip)
    background-color: #34A853

    &:after
      border-right-color: #34A853

  path
    fill: #BED8FA

  &:hover
    path
      fill: #3A506B


.field
  position: relative;
  margin-top: 37px;

.fieldTooltip
  position: absolute;
  right: 0
  top: calc(50% - 6px);

.description
  font-family: 'Avenir';
  font-size: 24px;
  color: #1C2541

  text-align: center;

.input
  box-sizing: border-box
  display: inline-block

  font-family: 'Avenir';
  font-weight: 800;
  font-size: 16px;

  height: 32px;
  width: 100%

  padding: 0 15px 10px 0

  background-color: transparent
  color: #1C2541

  border-bottom: 2px solid  #8CBBEE

  outline: 0

  &:-webkit-autofill,
  &:-webkit-autofill:hover,
  &:-webkit-autofill:focus,
  &:-webkit-autofill:active
    transition: background-color 5000s ease-in-out 0s

  &::placeholder
    font-family: Avenir;
    font-weight: normal;
    font-size: 16px;
    color: #1C2541;


  &:focus
    border-bottom:  2px solid #4285F4

.actions
  display: flex;
  align-items: center;
  justify-content: flex-end;

  margin-top: 50px

  box-sizing: border-box;

.actionBtn
  box-sizing: border-box;

  padding: 0 0
  width: 150px;
  height: 60px;
  margin-left: 25px;

  font-family: 'Avenir';
  font-weight: 800;
  font-size: 12px;
  letter-spacing: 0.2em;

  text-align: center;
  text-transform: uppercase;

  color: color-white;


  background-color: #FF7092;
  border-radius: 5px;

  outline: 0
  cursor: pointer;

  &:hover
    background-color: lighten(#FF7092, 10%)
