@import '~@gemsorg/uikit/colors';

.container
  margin-top: 30px;

.label
  display: flex;
  align-items: center;
  justify-content: space-between;

  font-family: 'Avenir';
  font-size: 16px;
  color: #1C2541;

.dropzone
  margin-top: 10px;
  width: 100%

  background-color: rgba(47, 128, 237, 0.25)
  mix-blend-mode: normal;
  border-radius: 5px;

  height: 140px;

  cursor: pointer;

.hint
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;

  path
    fill: color-white;

.preview
  display: block;

  width: auto;
  height: auto;

  max-width: 100px
  max-height: 100px
