@import 'components/common/uikit/colors'

.container
  box-sizing: border-box;
  display: flex;
  align-items: stretch;
  justify-content: flex-start;

  height: 100%;
  margin-left: 92px;

  background-color: #1C2541

  flex-grow: 1

.item
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;

  font-family: 'Avenir'
  font-size: 16px;
  width: 150px

  background-color: #1C2541
  color: color-white


  outline: 0
  cursor: pointer;

.active
  font-weight: 800
  background-color: #2F80ED

.checkmark
  position: relative;
  top: -18px

  path
    fill: color-white
