@import '~@gemsorg/uikit/colors'

.container
  box-sizing: border-box;
  display: flex;
  align-items: stretch;
  justify-content: flex-start;

  height: 100%;
  margin-left: 137px;

  background-color: #1C2541

  flex-grow: 1

.item
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;

  font-family: 'Avenir'
  font-size: 16px;
  width: 150px

  background-color: #1C2541
  color: color-white


  outline: 0
  cursor: pointer;

.active
  font-weight: 800
  background-color: #F3F9FF
  color: #1C2541

  &:after
    position: absolute;
    top: calc(100% - 1px)
    left: 0
    right: 0
    height: 6px

    content: ' '
    background-color: #F3F9FF;


.checkmark
  position: relative;
  top: -10px
  path
    fill: #34A853
