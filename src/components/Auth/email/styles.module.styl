@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

.container
  padding: 18px 15px 20px
  box-sizing: border-box

  border-bottom-left-radius: 8px
  border-bottom-right-radius: 8px

  &:hover
    background: linear-gradient(color-medium-blue, color-white, color-white, color-white);

.header
  display: flex
  align-items: center
  height: 40px

.logo
  margin-right: 18px

.title
  font(h3-title)
  color: color-text-dark

.form
  box-sizing: border-box
  padding: 10px 5px 0

.error
  margin-top: 10px

.input
  margin-top: 20px

  font-size: 18px
  border-radius: 4px

.submit
  width: 100%
  margin-top: 20px

  background: color-medium-blue
  color: color-text-blue
  border: 1px solid color-heavy-blue

  &:hover
    background: darken(color-medium-blue, 2%)

.submit
.toggle
  height: 40px

  font(body-bold, false, 15px, false)
  letter-spacing: 0.15em;

.forgotContainer
  display: flex
  justify-content: flex-end

.forgot
  margin-top: 18px

  font: body
  color: color-text-grey
  background-color: transparent
  text-decoration: none

  outline: none
  cursor: pointer


.signUpSubmit
  margin-top: 58px
