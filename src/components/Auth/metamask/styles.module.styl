@import 'components/common/uikit/colors'
@import 'components/common/uikit/font'

.button
  display: flex
  align-items: center

  width: 100%
  height: 72px
  line-height: 72px

  font(h3-title)
  color: color-text-dark
  border-radius: 8px

  cursor: pointer
  outline: 0;

  &:hover
    background: linear-gradient(color-medium-blue, color-white);

.fox
  width: 40px
  height: 40px
  margin-right: 18px
  margin-left: 15px

  background-position:center
  background-size: contain
  background-repeat: no-repeat
  background-origin: border-box
  background-image: url(../../assets/fox.svg)

.error
  padding: 10px 15px
