@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'

:global(.gem-metamask-button)
  display: flex
  align-items: center

  width: 100%
  height: 56px
  line-height: 56px

  font(h3-title)
  color: color-text-dark
  border-radius: 5px
  background-color: color-white;
  border: 1px solid color-heavy-blue

  cursor: pointer
  outline: 0;

.fox
  width: 40px
  height: 40px
  margin-right: 18px
  margin-left: 24px

  background-position:center
  background-size: contain
  background-repeat: no-repeat
  background-origin: border-box
  background-image: url("~@expandorg/uikit/assets/fox.svg")

.error
  padding: 10px 15px
