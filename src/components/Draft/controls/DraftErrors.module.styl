@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.container
  position relative
  margin-right 15px


.button
  box-sizing: border-box

  height 40px
  padding: 0 10px

  display flex
  justify-content: center
  align-items: center

  font(h4-bold, false, false)
  color: color-white

  background-color: transparent
  border: none
  outline: 0
  border: 0
  cursor pointer

.updown
  position relative
  top: 1px
  margin-left: 5px
  path
    fill color-white

.warning
  position relative
  top: -1px
  margin-right: 8px
  path
    fill color-text-yellow
