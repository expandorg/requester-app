@import '~@expandorg/uikit/colors'
@import '~@expandorg/uikit/font'


.container
  margin-top: 50px

.delete
  box-sizing: border-box;

  width: 176px
  height: 40px

  font(subtitle, false, false, 40px)
  letter-spacing: 0.15em;
  text-transform: uppercase;
  text-align: center;

  border-radius: 2px

  background-color: color-yellow
  color: color-text-yellow-2

  outline: none
  cursor: pointer;

  &:hover
    background-color: lighten(color-yellow, 20%)
