@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.scroll
  padding-top: 20px

.spacer
  border-color: transparent

.clearCell
  border-color: transparent
  background-color: color-white
  text-align: center
  padding: 0 10px
  max-width: initial
  width: initial

.add
.delete
  box-sizing: border-box
  margin:  0
  padding: 5px 10px

  background: transparent

  outline: none
  cursor pointer

.add
  color: color-blue-background
  font(body, bold, 25px)

.delete
  color: color-text-disabled
  font(body, bold, 18px)

