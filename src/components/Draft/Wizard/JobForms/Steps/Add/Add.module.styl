@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.container
  position relative

.add
  box-sizing: border-box
  width: 40px
  height: 40px

  font(body, false, 25px, 38px)
  color: color-primary-blue
  background-color: color-white

  border: 1px solid color-heavy-blue
  border-radius: 20px

  outline: 0
  cursor pointer
