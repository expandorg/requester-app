@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';


.add
  box-sizing: border-box
  width: 40px
  height: 40px

  font(body, false, 25px, 38px)
  color: color-primary-blue
  background-color: color-white

  border: 1px solid color-heavy-blue
  border-radius: 20px


  outline: 0
  cursor pointer

.menu
  margin-left: 24px

  display flex

.item
  box-sizing: border-box

  height: 40px
  min-width 130px

  text-align: center
  font(h4-bold, false, false, 38px)
  padding: 0 20px

  color: color-black
  border: 1px solid color-heavy-blue
  border-right-color: transparent

  &:first-child
    border-top-left-radius: 20px
    border-bottom-left-radius: 20px

  &:last-child
    border-top-right-radius: 20px
    border-bottom-right-radius: 20px
    border-right-color: color-heavy-blue

