@import 'components/common/uikit/colors'
@import 'components/common/uikit/font'

.form
  box-sizing: border-box;
  padding: 75px 15px 20px

.fieldset
  box-sizing: border-box;

  margin: 0 auto;
  max-width: 520px

.field
  position: relative;
  margin-top: 37px;

.fieldTooltip
  position: absolute;
  right: 0
  top: 10px

.description
  font(h2-title)
  color: color-text-dark
  text-align: center;

.actions
  display: flex;
  align-items: center;
  justify-content: flex-end;

  margin-top: 50px

  box-sizing: border-box;

  > *
    margin-left: 15px

    &:first-child
      margin-left: 0px

.error
  color: color-text-yellow-2
  font(small-text, 600, false, 1)
  margin-top: 8px
