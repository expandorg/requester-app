@import 'components/common/uikit/colors'
@import 'components/common/uikit/font'

.placeholder
  text-align: center;

.hint
  margin-bottom: 5px

  path
    fill: color-heavy-blue

.or
  margin-bottom: 15px
  color: color-text-dark;
  font(body, false, false, 1)

.browse
  box-sizing: border-box;
  text-align: center;

  color: color-text-blue
  background-color: color-white;

  font(subtitle, false, false, 38px)
  text-transform: uppercase;

  width: 104px;
  height: 40px;

  border: 1px solid color-heavy-blue;
  border-radius: 2px
