@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';
@import '~@expandorg/uikit/size';

.btn
  margin-right: 20px

  &:last-child
    margin-right: 0

.buttons
.previewContainer
  display: flex;
  align-items: center
  position: relative

.toggle
  display: flex
  justify-content: center
  align-items: center

  width: 50px
  height: 50px

  box-sizing: border-box;

  border: 1px solid color-grey-background
  border-radius: 2px

  outline: none;
  cursor: pointer

.enabled
  background: color-blue-background
  border-color: color-blue-background

  path
    fill: color-white


.previewPin
  top: -60px
  left: 60px

.togglePin
  top: -60px
  left: 175px
