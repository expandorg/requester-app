@import '~@expandorg/uikit/colors';
@import '~@expandorg/uikit/font';

.cell
  padding-left: 0
  padding-right: 0
  width: 240px
  min-width: 240px
  background-color: color-white


.input
  box-sizing: border-box

  width: 100%;
  height: 50px;
  font(body, false, false, normal)
  padding: 0 10px 0 20px

  outline: 0

  .answer &
    background-color: #E1F2EF

.switch
  margin-left: 20px

.value
  margin-left: 20px

.answer
  background-color: #E1F2EF
  border-color color-teel-dark
